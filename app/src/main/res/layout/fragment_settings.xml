<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">


    <!-- Título de la pantalla -->
    <TextView
        android:id="@+id/textSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Bienvenido"
        android:textSize="22sp"
        android:textStyle="bold" />

    <!-- Cuadro para el Switch de modo oscuro -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:padding="16dp"
        android:background="?android:attr/selectableItemBackground"
        android:layout_marginBottom="16dp">

        <!-- Texto del Switch -->
        <TextView
            android:text="Modo Oscuro"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <!-- Switch para activar o desactivar modo oscuro -->
        <Switch
            android:id="@+id/switchDarkMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Cuadro decorativo para el nombre del usuario -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:padding="16dp"
        android:background="?android:attr/selectableItemBackground"
        android:layout_marginBottom="12dp"
        android:weightSum="1">

        <!-- Icono de usuario -->
        <ImageView
            android:src="@drawable/ic_profile_placeholder"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp" />

        <!-- Nombre del usuario -->
        <TextView
            android:id="@+id/textUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sinombre"
            android:textSize="18sp"
            android:textStyle="italic" />
    </LinearLayout>

    <!-- Cuadro decorativo para el correo -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:padding="10dp"
        android:background="?android:attr/selectableItemBackground"
        android:layout_marginBottom="16dp"
        android:weightSum="1">

        <!-- Icono de correo -->
        <ImageView
            android:src="@drawable/baseline_email_24"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp" />

        <!-- Correo del usuario -->
        <TextView
            android:id="@+id/textEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Correo no disponible"
            android:textSize="14sp"
            android:textStyle="italic" />
    </LinearLayout>

    <!-- Cuadro decorativo para la edad -->
    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:padding="16dp"
        android:background="?android:attr/selectableItemBackground"
        android:layout_marginBottom="16dp"
        android:weightSum="1">

        <!-- Icono de edad -->
        <ImageView
            android:src="@drawable/baseline_calendar_month_24"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp" />

        <!-- Edad del usuario -->
        <TextView
            android:id="@+id/textAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edad no disponible"
            android:textSize="14sp"
            android:textStyle="italic" />
    </LinearLayout>
    <!-- Botón para cerrar sesión (movido hacia arriba) -->
    <Button
        android:id="@+id/buttonLogout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        android:text="Cerrar Sesión"
        android:textSize="18sp" />



</LinearLayout>
