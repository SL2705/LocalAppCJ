<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.localappcj.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_dashboard"
        android:name="com.example.localappcj.ui.dashboard.DashboardFragment"
        android:label="@string/title_dashboard"
        tools:layout="@layout/fragment_dashboard" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.localappcj.ui.notifications.NotificationsFragment"
        android:label="@string/title_notifications"
        tools:layout="@layout/fragment_notifications" />
    <fragment
        android:id="@+id/navigation_map"
        android:name="com.example.localappcj.MapFragment"
        android:label="Map"
        tools:layout="@layout/fragment_map" />
    <activity
        android:id="@+id/navigation_tourist_description"
        android:name="com.example.localappcj.TouristDescriptionActivity"
        android:label="Tourist Description"
        tools:layout="@layout/activity_tourist_description" />
    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.localappcj.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" />
    <activity
        android:id="@+id/navigation_review"
        android:name="com.example.localappcj.ReviewActivity"
        android:label="Review"
        tools:layout="@layout/activity_review">
        <argument
            android:name="reviewId"
            app:argType="integer"
            android:defaultValue="0" />
    </activity>
</navigation>