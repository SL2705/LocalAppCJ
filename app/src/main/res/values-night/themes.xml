<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema base para la aplicaciÃ³n en modo oscuro -->
    <style name="Theme.LocalAppCJ" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Colores primarios -->
        <item name="colorPrimary">@color/colorGreenDark</item> <!-- Verde oscuro -->
        <item name="colorPrimaryVariant">@color/colorGreen</item> <!-- Verde claro -->
        <item name="colorOnPrimary">@color/blanco</item> <!-- Color de texto en colorPrimary -->

        <!-- Colores secundarios -->
        <item name="colorSecondary">@color/colorBlueDark</item> <!-- Azul oscuro -->
        <item name="colorSecondaryVariant">@color/colorBlue</item> <!-- Azul claro -->
        <item name="colorOnSecondary">@color/white</item> <!-- Color de texto en colorSecondary -->

        <!-- Color de fondo -->
        <item name="android:windowBackground">@color/colorBackgroundDark</item> <!-- Fondo oscuro -->

        <!-- Color de texto sobre fondo oscuro -->
        <item name="android:textColorPrimary">@color/white</item> <!-- Texto principal en blanco -->
        <item name="android:textColorSecondary">@color/white</item> <!-- Texto secundario en blanco -->

        <!-- Color de la barra de estado -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
</resources>
