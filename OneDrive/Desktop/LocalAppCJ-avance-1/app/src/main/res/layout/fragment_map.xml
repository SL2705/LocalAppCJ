<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <!-- Vista del mapa -->
    <org.osmdroid.views.MapView
        android:id="@+id/map_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="?android:attr/colorSurface"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/button_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Contenedor de los botones -->
    <LinearLayout
        android:id="@+id/button_container"
        android:layout_width="378dp"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <!-- Botón para centrar el mapa -->
        <Button
            android:id="@+id/btn_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:backgroundTint="?android:attr/colorPrimary"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="Centrar Mapa"
            android:textColor="?android:attr/colorOnPrimary" />

        <!-- Botón para mostrar las zonas turísticas -->
        <Button
            android:id="@+id/btn_markers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:backgroundTint="?android:attr/colorSecondary"
            android:paddingHorizontal="16dp"
            android:paddingVertical="8dp"
            android:text="Mostrar Zonas"
            android:textColor="?android:attr/colorOnSecondary" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
